---
import HeaderLink from './HeaderLink.astro';
import ThemeToggle from './ThemeToggle.astro';
import { SITE_TITLE } from '../consts';
---

<header>
  <nav>
    <h2><a href="/">{SITE_TITLE}</a></h2>
    <div class="internal-links">
      <HeaderLink href="/about">About</HeaderLink>
      <HeaderLink href="/privacy">Privacy</HeaderLink>
    </div>
    <div class="social-links">
      <a href="https://twitter.com/paveg_" target="_blank">
        <span class="sr-only">Follow Me on X</span>
        <svg viewBox="0 0 24 24" aria-hidden="true" width="32" height="32" fill="currentColor">
          <path
            d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
          ></path>
        </svg>
      </a>
      <a href="https://github.com/paveg" target="_blank">
        <span class="sr-only">Go to My GitHub page</span>
        <svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32"
          ><path
            fill="currentColor"
            d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
          ></path></svg
        >
      </a>
      <ThemeToggle />
    </div>
  </nav>
</header>
<style>
  header {
    width: 100%;
    background: var(--color-bg);
    border-bottom: 1px solid var(--color-border);
    position: relative;
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    max-width: 42rem;
    margin: 0 auto;
    padding: var(--space-md) var(--space-lg);
    position: relative;
  }

  h2 {
    margin: 0;
    font-size: var(--font-size-lg);
    font-weight: 500;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
    color: var(--color-text);
    border-bottom: none;
  }

  h2 a:hover {
    color: var(--color-text);
    border-bottom: none;
  }

  .internal-links {
    display: flex;
    gap: var(--space-lg);
  }

  .social-links {
    display: flex;
    gap: var(--space-md);
    align-items: center;
  }

  .social-links a {
    display: flex;
    color: var(--color-text-light);
    border-bottom: none;
    transition: color 0.2s ease;
  }

  .social-links a:hover {
    color: var(--color-text);
    border-bottom: none;
  }

  .social-links svg {
    width: 20px;
    height: 20px;
  }

  @media (max-width: 720px) {
    nav {
      padding: var(--space-sm) var(--space-md);
      flex-wrap: wrap;
      gap: var(--space-sm);
    }

    h2 {
      font-size: var(--font-size-base);
      flex: 0 0 auto;
      margin-left: var(--space-xs);
    }

    .internal-links {
      gap: var(--space-sm);
      flex: 1 1 auto;
      justify-content: center;
      order: 3;
      width: 100%;
      margin-top: var(--space-sm);
    }

    .social-links {
      flex: 0 0 auto;
      order: 2;
      margin-right: var(--space-xs);
    }

    .social-links a {
      display: none;
    }

    .social-links :global(.theme-toggle) {
      display: flex;
    }
  }

  @media (max-width: 480px) {
    nav {
      padding: var(--space-xs) var(--space-sm);
    }

    h2 {
      font-size: var(--font-size-sm);
      margin-left: var(--space-sm);
    }

    .internal-links {
      gap: var(--space-xs);
    }

    .social-links {
      margin-right: var(--space-sm);
    }
  }
</style>
