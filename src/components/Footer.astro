<style>
  footer {
    width: 100%;
    padding: var(--space-lg) 0;
    background: var(--color-bg);
    color: var(--color-text-light);
    border-top: 1px solid var(--color-border);
    font-size: var(--font-size-sm);
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--space-md);
  }

  .copyright {
    flex: 1;
  }

  .footer-links {
    display: flex;
    gap: var(--space-md);
    align-items: center;
  }

  .footer-links a {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    color: var(--color-text-light);
    border-bottom: none;
    transition: color 0.2s ease;
  }

  .footer-links a:hover {
    color: var(--color-text);
    border-bottom: none;
  }

  .footer-links svg {
    width: 1.25rem;
    height: 1.25rem;
  }

  @media (max-width: 720px) {
    .footer-content {
      flex-direction: column;
      text-align: center;
      gap: var(--space-sm);
    }
  }
</style>
